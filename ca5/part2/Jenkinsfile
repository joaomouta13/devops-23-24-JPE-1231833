pipeline {
    agent any

    tools {
        // Use the Docker installation named 'docker'
        dockerTool 'docker'
    }

    environment {
        // Define Docker Hub credentials ID as configured in Jenkins credentials
        DOCKERHUB_CREDENTIALS = 'moutaj'
        // Define the Docker image name
        IMAGE_NAME = "image-with-jenkins"
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'Checking out the code from the repository'
                git branch: 'main', url: 'https://github.com/joaomouta13/devops-23-24-JPE-1231833.git'
            }
        }

        stage('Assemble') {
            steps {
                echo 'Assembling...'
                dir('ca2/part2') {
                    sh 'chmod +x ./gradlew'
                    sh './gradlew clean assemble -x test'
                }
            }
            post {
                success {
                    // Archive the build artifacts
                    archiveArtifacts artifacts: '**/build/libs/*.jar', allowEmptyArchive: true
                }
            }
        }

        stage('Test') {
            steps {
                echo 'Testing...'
                dir('ca2/part2') {
                    sh './gradlew test'
                    junit '**/build/test-results/test/*.xml'
                }
            }
        }

        stage('Javadoc') {
            steps {
                echo 'Generating Javadoc...'
                dir('ca2/part2') {
                    sh './gradlew javadoc'
                    archiveArtifacts artifacts: '**/build/docs/javadoc/**', allowEmptyArchive: true
                    publishHTML target: [
                        allowMissing: false,
                        alwaysLinkToLastBuild: true,
                        keepAll: true,
                        reportDir: 'build/docs/javadoc',
                        reportFiles: 'index.html',
                        reportName: 'Javadoc Report'
                    ]
                }
            }
        }

        stage('Archive') {
            steps {
                echo 'Archiving...'
                dir('ca2/part2') {
                    archiveArtifacts artifacts: '**/build/libs/*.jar', allowEmptyArchive: true
                }
            }
        }

        stage('Publish Image') {
            steps {
                script {
                    echo 'Publishing Docker image...'
                    docker.withRegistry('https://registry.hub.docker.com', DOCKERHUB_CREDENTIALS) {
                        // Building Docker image and pushing it to Docker Hub
                        def dockerImage = docker.build(IMAGE_NAME + ":${env.BUILD_NUMBER}", './ca2/part2')
                        dockerImage.push()
                    }
                }
            }
        }
    }
}
